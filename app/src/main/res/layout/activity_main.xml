<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#F2f2f2"
        android:layout_height="match_parent"
        tools:context="ba.rubicon.batteryview.MainActivity">

    <ba.rubicon.widget.battery.BatteryMeterView
            android:layout_width="292dp"
            android:id="@+id/battery_view"
            android:layout_height="148dp"
            app:battery_level="0"
            android:background="@android:color/transparent"
            app:normal_fill_color="@android:color/holo_green_dark"
            app:warning_fill_color="@android:color/darker_gray"
            app:background_fill_color="@android:color/white"
            app:charging_color="@android:color/holo_orange_dark"
            app:battery_head_color="@android:color/darker_gray"
            android:layout_gravity="center"
            app:charging="false"/>
</FrameLayout>